# ============================================================================
# Discord Event Bot - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# Discord Bot Configuration (REQUIRED)
# ----------------------------------------------------------------------------
# Your Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Your Discord application client ID (found in OAuth2 section)
DISCORD_CLIENT_ID=your_discord_client_id_here

# ----------------------------------------------------------------------------
# Web Server Configuration (REQUIRED for Web UI)
# ----------------------------------------------------------------------------
# Port for the web interface (default: 3000)
WEB_PORT=3000

# Username for web interface login
WEB_USERNAME=admin

# Password for web interface login (change this!)
WEB_PASSWORD=your_secure_password_here

# ----------------------------------------------------------------------------
# Database Configuration (REQUIRED)
# ----------------------------------------------------------------------------
# Path to SQLite database file (relative to project root)
DB_PATH=./data/database.sqlite

# Enable database query logging (true/false)
# Set to false in production for better performance
DB_LOGGING=false

# ----------------------------------------------------------------------------
# Google Calendar Integration (OPTIONAL)
# ----------------------------------------------------------------------------
# Path to Google Calendar credentials JSON file
# Get credentials from https://console.cloud.google.com/
# Leave empty if not using Google Calendar integration
GOOGLE_CALENDAR_CREDENTIALS=./data/calendar-credentials.json

# Default calendar ID to use (optional)
# You can also configure multiple calendars via Discord commands
DEFAULT_CALENDAR_ID=your_calendar_id@group.calendar.google.com

# ----------------------------------------------------------------------------
# Twitch Integration (OPTIONAL)
# ----------------------------------------------------------------------------
# Twitch application credentials from https://dev.twitch.tv/console
# Leave empty if not using Twitch streaming notifications
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# How often to check for live streams (in milliseconds)
# Default: 60000 (1 minute)
TWITCH_CHECK_INTERVAL=60000

# ----------------------------------------------------------------------------
# YouTube Integration (OPTIONAL)
# ----------------------------------------------------------------------------
# YouTube Data API v3 key from https://console.cloud.google.com/
# Leave empty if not using YouTube notifications
YOUTUBE_API_KEY=your_youtube_api_key_here

# How often to check for new videos (in milliseconds)
# Default: 300000 (5 minutes)
YOUTUBE_CHECK_INTERVAL=300000

# ----------------------------------------------------------------------------
# Application Settings (OPTIONAL)
# ----------------------------------------------------------------------------
# Node environment (development/production)
NODE_ENV=development

# Timezone for event displays (IANA timezone identifier)
# Examples: America/New_York, Europe/London, Asia/Tokyo
TZ=America/New_York

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug mode for additional logging
DEBUG=false

# ----------------------------------------------------------------------------
# Advanced Settings (OPTIONAL - Use defaults unless you know what you're doing)
# ----------------------------------------------------------------------------
# Maximum events to display in /list command
MAX_EVENTS_DISPLAY=10

# How far ahead to look for upcoming events (in days)
UPCOMING_EVENTS_DAYS=30

# Auto-sync interval for Google Calendar (in milliseconds)
# Default: 300000 (5 minutes)
CALENDAR_SYNC_INTERVAL=300000

# Session token expiry time (in milliseconds)
# Default: 86400000 (24 hours)
SESSION_EXPIRY=86400000

# Enable CORS for web API (true/false)
# Only enable if you're running the web UI on a different domain
ENABLE_CORS=false

# Allowed CORS origins (comma-separated)
# Example: https://example.com,https://another.com
CORS_ORIGINS=

# ----------------------------------------------------------------------------
# Notes
# ----------------------------------------------------------------------------
# REQUIRED variables must be set for the bot to function
# OPTIONAL variables can be left empty to disable those features
#
# Security Best Practices:
# 1. Never commit your .env file to version control
# 2. Use strong, unique passwords for WEB_PASSWORD
# 3. Rotate your Discord token and API keys regularly
# 4. Limit bot permissions to only what's needed
# 5. Keep your dependencies updated
#
# For more information, visit:
# https://github.com/SgtEpsilon/discord-event-bot
# ============================================================================